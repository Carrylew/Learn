    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
