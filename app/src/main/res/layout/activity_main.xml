    <com.lkw.learn.views.WordNav
        android:id="@+id/wordNav"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>